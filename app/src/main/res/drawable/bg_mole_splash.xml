<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:opacity="opaque">

    <item android:drawable="@android:color/white"/>

    <item android:id="@+id/launchscreen_mole"
          android:bottom="@dimen/launchscreen_mole_bottom">
        <bitmap android:gravity="center" android:src="@drawable/illo_mole"/>
    </item>

    <item android:id="@+id/launchscreen_text"
          android:bottom="@dimen/launchscreens_text_bottom">
        <bitmap android:gravity="bottom|center"
                android:src="@drawable/illo_name"/>
    </item>

</layer-list>